{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "env": {
    "node": true,
    "browser": true 
  },
  "rules": {
    "semi": ["error", "never"],
    "indent": ["error", 4],
    "quotes": ["error", "single"],
    "no-unused-vars": "error",
    "no-console": "warn",
    "no-undef": "error"
  }
}
