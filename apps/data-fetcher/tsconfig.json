{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["dom", "es2022"]
  }
}
